

<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <h2>Please log in</h2>
  <div class="form-group">
    <%= f.label( :email, class: "sr-only")%><br />
    <%= f.email_field( :email, autofocus: true, class: "form-control", placeholder: "your email") %>
  </div>

  <div class="form-group">
    <%= f.label( :password, class: "sr-only") %><br />
    <%= f.password_field( :password, autocomplete: "off", class: "form-control", placeholder: "your password") %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox-inline">
      <%= f.check_box :remember_me %> 
      <%= f.label :remember_me %>
    </div><br><br>
  <% end %>

  <div class="actions">
    <%= f.submit("Log in", class: "btn btn-lg btn-primary btn-block") %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
