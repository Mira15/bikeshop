<h1>Product Details</h1>

<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h2><%= @product.name %></h2>
      
      <p><strong>Description:</strong>
      <%= @product.description %></p>
      <p><strong>Colour:</strong>
      <%= @product.colour %></p>
      <p><strong>Price:</strong>
      <%= @product.price %></p>
      <p><%= link_to 'Edit', edit_product_path(@product) %></p>
      <p><%= link_to 'Back', products_path %></p>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h2>What other users said:</h2>
      <div>
        <%= image_tag(@product.image_url, class: "thumbnail") %>
      </div>
      
    </div>
    <div class="col-xs-12 col-md-6">
      <br><br><br><p>comments will go here</p><br><br>
      <%= @product.highest_rating_comment %><br><br><br>
      <button type="button" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-star"></span> comment <span class="glyphicon glyphicon-star">
      </button>
    </div>
  </div>
</div>