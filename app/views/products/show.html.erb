<h1>Product Details</h1>

<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h2><%= @product.name %></h2>
      
      <p><strong>Description:</strong>
      <%= @product.description %></p>
      <p><strong>Colour:</strong>
      <%= @product.colour %></p>
      <p><strong>Price:</strong>
      <%= @product.price %></p>
      <p><%= link_to 'Edit', edit_product_path(@product) %></p>
      <p><%= link_to 'Back', products_path %></p>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
    </div>
  </div>

  <div>
     <%= render partial: "new_comment" %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h2>What other users said:</h2>
      <div>
        <%= image_tag(@product.image_url, class: "thumbnail") %>
      </div>
      <h4>Average Rating:</h4> 
      <p><div class="rated" data-score="<%= @product.average_rating %>"></div></p>
    </div>
    <div class="col-xs-12 col-md-6">
      <h4><span class="glyphicon glyphicon-star"></span> Comments <span class="glyphicon glyphicon-star"></h4>
      <div>
         <%= render partial: "comments" %>
      </div>
    </div>
  </div>
</div>