<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
        <p><%= product.price %></p>
        <p><strong><%= product.colour %></strong></p>
        <button><%= link_to 'Show', product %></button>
        <button><%= link_to 'Edit', edit_product_path(product) %></button>
        <button><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div>
    <% end %>
  </div>
</div>

<br>

