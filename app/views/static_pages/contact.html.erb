<h1>Contact Bike Berlin</h1>
<p>Feel free to write us a message and get in touch with us!</p>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter your name" %>
    </div>
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter your email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter your message" %>
    </div>
  </div>
</div>
<%= submit_tag "Send" %>
<% end %><br><br>

<%= link_to 'About Section', about_path %><br>

<%= link_to 'Back', products_path %>