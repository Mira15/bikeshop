<!DOCTYPE html>
<html>
  <head>
    <title>Bikeshop</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>    
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="home navbar-brand">
            <%= link_to 'Home', root_path %>
          </div>
        </div>
        
        <%= form_tag("/products", method: "get", class: "navbar-form navbar-left", role: "search") do %>
          <div class="form-group">
          <%= label_tag(:q, "Search for:", class: "sr-only") %>
          <%= text_field_tag(:q, nil, class: "form-control", placeholder: "Search for a product") %>
          <%= button_tag("Find", class: "btn btn-default btn-success") %>
        <% end %>
        </div>

        <div class="collapse navbar-collapse ">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Bikes', caroussel_path %></li>
            <li><%= link_to 'Products', products_path %></li>
            <li><%= link_to 'Contact', contact_path %></li>
            <li><%= link_to 'About', about_path %></li>
            <li>
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
            </li>
          </ul>
        </div>
      </div><!--end nav container-->
    </nav><!--end navbar-->

    <% if notice %>
    <div id="notice" class="alert alert-success" role="alert"><%= notice %></div>
    <% end %>

    <% if alert %>
    <div id="alert" class="alert alert-warning" role="alert"><%= alert %></div>
    <% end %>

    <%= yield %>

    <footer>
      <div id="copyright">
        &copy; 2016 Bike Berlin
      </div>
    </footer>
  </body>
</html>
